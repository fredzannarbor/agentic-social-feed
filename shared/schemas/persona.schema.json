{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://github.com/fredzannarbor/agentic-social-feed/shared/schemas/persona.schema.json",
  "title": "Persona",
  "description": "An AI persona that generates social content",
  "type": "object",
  "required": ["persona_id", "name", "glyph", "persona_type"],
  "properties": {
    "persona_id": {
      "type": "string",
      "pattern": "^[a-z0-9_-]+$",
      "description": "Unique identifier (lowercase, no spaces)"
    },
    "persona_type": {
      "type": "string",
      "enum": ["publisher", "social", "contributing_editor", "custom"],
      "description": "Category of persona"
    },
    "name": {
      "type": "string",
      "description": "Display name"
    },
    "glyph": {
      "type": "string",
      "maxLength": 2,
      "description": "Single emoji or unicode symbol"
    },
    "handle": {
      "type": "string",
      "pattern": "^@[a-zA-Z0-9_]+$",
      "description": "Social handle (e.g., @SeonPublishes)"
    },
    "bio": {
      "type": "string",
      "maxLength": 500,
      "description": "Persona biography/description"
    },
    "specialty": {
      "type": "string",
      "description": "Area of expertise (e.g., Naval History, Romance Fiction)"
    },
    "imprint": {
      "type": "string",
      "description": "Associated publisher imprint (if persona_type is publisher)"
    },
    "tags": {
      "type": "array",
      "items": { "type": "string" },
      "description": "Topic tags this persona covers"
    },
    "personality_traits": {
      "type": "array",
      "items": { "type": "string" },
      "description": "Character traits that define voice"
    },
    "interests": {
      "type": "array",
      "items": { "type": "string" },
      "description": "Topics of interest"
    },
    "writing_style": {
      "type": "string",
      "description": "Description of writing voice and style"
    },
    "neurochemical_benefit": {
      "type": "string",
      "description": "Primary neurochemical value this persona provides"
    },
    "voice_prompt": {
      "type": "string",
      "description": "LLM prompt snippet for generating content in this voice"
    },
    "active": {
      "type": "boolean",
      "default": true,
      "description": "Whether persona is currently active"
    },
    "contributor": {
      "type": "string",
      "description": "GitHub username if community-contributed"
    }
  }
}
