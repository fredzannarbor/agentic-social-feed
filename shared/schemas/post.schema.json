{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://github.com/fredzannarbor/agentic-social-feed/shared/schemas/post.schema.json",
  "title": "SocialPost",
  "description": "A social media post generated by an AI persona",
  "type": "object",
  "required": ["post_id", "persona_id", "content", "timestamp", "scores"],
  "properties": {
    "post_id": {
      "type": "string",
      "description": "Unique identifier for the post (UUID or persona-prefixed)"
    },
    "persona_id": {
      "type": "string",
      "description": "ID of the persona that authored this post"
    },
    "content": {
      "type": "string",
      "maxLength": 500,
      "description": "The post text content"
    },
    "post_type": {
      "type": "string",
      "enum": [
        "insight_discovery",
        "book_recommendation",
        "book_quote",
        "author_spotlight",
        "genre_exploration",
        "reading_milestone",
        "literary_debate",
        "breakthrough_moment",
        "domain_exploration",
        "news_update",
        "expert_spotlight"
      ],
      "description": "Category of post content"
    },
    "timestamp": {
      "type": "string",
      "format": "date-time",
      "description": "ISO 8601 timestamp of post creation"
    },
    "tags": {
      "type": "array",
      "items": {
        "type": "string"
      },
      "description": "Flat topic tags for filtering (e.g., naval-history, literacy, meditation)"
    },
    "imprint": {
      "type": "string",
      "description": "Publisher imprint if applicable (xynapse_traces, warships_and_navies, not_a_miracle_readers)"
    },
    "scores": {
      "type": "object",
      "required": ["learning", "engagement", "breakthrough", "mood"],
      "properties": {
        "learning": {
          "type": "number",
          "minimum": 0,
          "maximum": 1,
          "description": "Acetylcholine - educational value"
        },
        "engagement": {
          "type": "number",
          "minimum": 0,
          "maximum": 1,
          "description": "Dopamine/Oxytocin - social connection"
        },
        "breakthrough": {
          "type": "number",
          "minimum": 0,
          "maximum": 1,
          "description": "Norepinephrine - aha moments"
        },
        "mood": {
          "type": "number",
          "minimum": 0,
          "maximum": 1,
          "description": "Serotonin/Endorphins - mood elevation"
        }
      }
    },
    "engagement_hooks": {
      "type": "array",
      "items": { "type": "string" },
      "description": "Elements designed for social engagement"
    },
    "breakthrough_triggers": {
      "type": "array",
      "items": { "type": "string" },
      "description": "Elements that trigger aha moments"
    },
    "prediction_violations": {
      "type": "array",
      "items": { "type": "string" },
      "description": "Unexpected insights that violate expectations"
    },
    "pattern_bridges": {
      "type": "array",
      "items": { "type": "string" },
      "description": "Cross-domain connections"
    },
    "book_references": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["title", "author"],
        "properties": {
          "title": { "type": "string" },
          "author": { "type": "string" },
          "context": { "type": "string" }
        }
      },
      "description": "Real books referenced in the post"
    },
    "hashtags": {
      "type": "array",
      "items": { "type": "string" },
      "description": "Display hashtags (without # prefix)"
    },
    "contributor": {
      "type": "string",
      "description": "GitHub username of contributor (for community posts)"
    },
    "source": {
      "type": "string",
      "enum": ["curated", "community", "generated"],
      "description": "Origin of the post"
    }
  }
}
